<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/btnRotateLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Rotate Left"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/btnLeft"
            app:layout_constraintEnd_toStartOf="@+id/btnBack" android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:id="@+id/btnRotateRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate Right"
            android:layout_marginBottom="128dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBack" android:layout_marginStart="24dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnRight"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.2"/>
    <Button
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn Left"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btnForward" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:id="@+id/btnForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="248dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.505" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.758"/>
    <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRight" app:layout_constraintEnd_toStartOf="@+id/btnRight"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/btnLeft"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.347"
            app:layout_constraintVertical_bias="0.21"/>
    <Button
            android:id="@+id/btnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Turn Right"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.877" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btnForward"/>
</android.support.constraint.ConstraintLayout>